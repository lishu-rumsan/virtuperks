{
  "compileOnSave": false,
  
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rumsan/virtuperks": [
        "libs/virtuperks/src/index.ts"
      ],
      "@rumsan/virtuperks-nest": [
        "libs/virtuperks-nest/src/index.ts"
      ],
      "@rumsan/virtuperks-react": [
        "libs/virtuperks-react/src/index.ts"
      ],
      "@virtu-perks/contracts": [
        "libs/contracts/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}